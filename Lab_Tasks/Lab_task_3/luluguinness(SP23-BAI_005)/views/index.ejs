    <section class="product-showcase py-5 text-center">
        <h2 class="mb-4">New Arrivals</h2>
        <div class="container">
            <div class="row g-4 justify-content-center">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <div class="col-md-3">
                            <div class="product p-3 border">
                                <img src="/media/images/<%= product.image %>" class="img-fluid" alt="<%= product.title %>">
                                <h3 class="fs-6 mt-2"><%= product.title %></h3>
                                <p class="text-pink fw-bold">Â£<%= product.price.toFixed(2) %></p>
                                <div class="mt-2">
                                    <a href="/product/<%= product._id %>" class="btn btn-outline-dark btn-sm">View Details</a>
                                    <form action="/cart/add/<%= product._id %>" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-pink btn-sm">Add to Cart</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12">
                        <p>No products available at the moment.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
